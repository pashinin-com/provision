# -*- mode: hcl -*-


# node_name = "server451"  # By default this is the hostname of the machine.
datacenter = "moscow"

bootstrap = false
server = {{ 'true' if (mode == 'server') else 'false' }}
data_dir = "/var/consul"

# TRACE DEBUG INFO WARN ERR
log_level = "ERR"


bind_addr="{{inventory_hostname}}"


# Error after Agent started: failed to sync remote state: No known Consul servers
# Solution: write "retry_join" list below
# "192.168.1.11:8301",
# "192.168.1.12:8301",
# "192.168.1.13:8301"
retry_join = [
  "10.254.239.1",
  "10.254.239.2",
  "10.254.239.3"
]

addresses {
  # http = "{{inventory_hostname}}"
  http = "0.0.0.0"
  dns = "0.0.0.0"
}

# telemetry {
#   statsite_address = "10.254.239.1:2180"
# }

# performance {
#   raft_multiplier = 1
#   rpc_hold_timeout = "1s"
# }
enable_script_checks = true

services = [
  {
    id = "red0"
    name = "redis"
    tags = [
      "primary"
    ]
    address = ""
    port = 6000
    checks = [
      {
        script = "service redis-server status"
        interval = "60s"
      }
    ]
  },
  {
    # id = "red0"
    name = "nginx"
    tags = [
      "primary"
    ]
    address = ""
    port = 80
    checks = [
      {
        script = "service nginx status"
        interval = "60s"
      }
    ]
  }
]
